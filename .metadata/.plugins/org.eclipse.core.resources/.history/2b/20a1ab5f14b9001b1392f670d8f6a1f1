package com.wcode.api_hateoas.services;

import java.util.Optional;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.wcode.api_hateoas.models.Car;
import com.wcode.api_hateoas.repositories.CarRepository;

@Service
public class CarServiceImp implements CarService {

	@Autowired
	CarRepository carRepository;

	@Override
	public List<Car> getAllCars() {
		return this.carRepository.findAll();
	}

	@Override
	public Car getOneCar(Long id) {
		Optional<Car> car = this.carRepository.findById(id);
		return car.get();
	}

	@Override
	public Boolean updateCar(Long id, Car car) {
		Car carExist = this.getOneCar(id);
		if (carExist == null) {
			return false;
		} else {
			carExist.setId(id);
			carExist.setFabricante(car.getFabricante());
			carExist.setModelo(car.getModelo());
			carExist.setAno(car.getAno());
			this.carRepository.save(carExist);
			return true;
		}
	}

	@Override
	public Boolean removeCar(Long id) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Car addCar(Car car) {
		return this.carRepository.save(car);
	}

}
