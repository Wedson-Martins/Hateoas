		this.carRepository.findById(id);
		return null;
	}

	@Override
	public Boolean updateCar() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Boolean removeCar() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Car addCar(Car car) {
		return this.carRepository.save(car);
	}

}
